{
  "name": "forma-core",
  "version": "1.0.0",
  "description": "Forma RESTful API service",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "concurrently \"npm run watch-deploy\" \"npm run watch-build\"",
    "prod": "npm run deploy",
    "deploy": "node dist/server.js",
    "build": "tsc",
    "watch-deploy": "nodemon dist/server.js",
    "watch-build": "tsc -w",
    "postinstall": "npm run build",
    "api": "npx -y redoc-cli serve api/core-api.yaml",
    "api:dev": "npx -y redoc-cli serve api/core-api.yaml --watch"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongodb": "^3.6.5",
    "nanoid": "^3.1.22",
    "typescript": "^4.2.3",
    "util": "^0.12.3",
    "uuid": "^8.3.2",
    "validator": "^13.5.2",
    "xregexp": "^5.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.6.11",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  }
}
