{
  "name": "forma-core",
  "version": "1.4.0",
  "description": "Forma RESTful API service",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "prod": "npm run build && node dist/server.js",
    "build": "rimraf dist && tsc",
    "postinstall": "npm run build",
    "lint": "npx eslint . --ext .ts && tsc --noEmit",
    "api": "npx -y redoc-cli serve docs/core-api.yaml",
    "api:dev": "npx -y redoc-cli serve docs/core-api.yaml --watch",
    "api:build": "npx -y redoc-cli bundle docs/core-api.yaml --output docs/index.html",
    "gen-mock-data": "node scripts/gen-mock-data.js"
  },
  "dependencies": {
    "@casl/ability": "^5.3.1",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.10.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.2",
    "mongodb": "^3.6.5",
    "nanoid": "^3.1.22",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.3",
    "util": "^0.12.3",
    "uuid": "^8.3.2",
    "validator": "^13.7.0",
    "xregexp": "^5.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.6.11",
    "@types/node": "^15.12.2",
    "@types/uuid": "^8.3.0",
    "@types/validator": "^13.1.3",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.2",
    "nodemon": "^2.0.7",
    "ts-node": "^10.4.0"
  }
}
